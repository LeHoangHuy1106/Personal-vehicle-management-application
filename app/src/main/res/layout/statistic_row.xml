<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:background="#D0ECECEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtstatistic_stt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="1"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtstatistic_TenXe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="Honda3f"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtstatistic_loaiNote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Đổ xăng"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtstatistic_NgayNote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1/1/2022"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtstatistic_km"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30000"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtstatistic_tien"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>